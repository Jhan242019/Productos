@{
    var product = (Producto)Model;
}

<h1>Registrar Producto</h1>

<div class="row">
    <div class="col-6 offset-3">
        <form action="/product/create" method="post">
            <div class="form-group">
                <label>Nombre</label>
                <input class="form-control" required name="Nombre" value="@product.Nombre" />
                @Html.ValidationMessage("Nombre")
            </div>

            <div class="form-group">
                <label>Categoria</label>
                <input class="form-control" required name="Categoria" value="@product.Categoria" />
                @Html.ValidationMessage("Categoria")
            </div>
            
            <div class="form-group">
                <label>Proveedor</label>
                <input class="form-control" required name="Proveedor" value="@product.Proveedor" />
                @Html.ValidationMessage("Proveedor")
            </div>
            
            <div class="form-group">
                <label>Saldo Inicial</label>
                <input class="form-control" required name="Costo" value="@product.Costo" />
                @Html.ValidationMessage("Costo")
            </div>

            <button class="btn btn-primary">Registrar</button>

        </form>
    </div>
</div>
